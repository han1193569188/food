/* pages/details/detail.wxss */
page{
  background: #f8f8f7;
}
.box{
  width: 720rpx;
  margin: 10px auto 0;  
}
.imgbox{
  height: 500rpx;
  background-size: cover;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}
.name{
  padding-left: 3px;
  margin-top: 10px;
  font-size: 18px;
  font-weight:  500;
  color: #111;
}
.main{
  background: #fff;
  padding: 15px 0;
  margin-top: 15px;
  margin-bottom: 10px;  
  border-radius: 6px;
  box-shadow: 0 1px 3px rgba(100,100,100,.3);
}
.det{
  margin-bottom:12px;
  padding-left:10px;
  padding-right: 10px;
  font-weight:bold;
  color:#333;
  display:flex;
  justify-content: space-between;
}
.likebox{
   width: 65px;
   background-color: #EC7309;
   display: flex;
   justify-content: space-around;
   font-size: 13px;
   line-height: 30px;
   height: 30px;
   padding: 0 5px; 
   color: #fff;
   font-weight: 100;
   border-radius: 4px;
   margin-top: -3px;
   align-items: center;
}
.like{
  width: 19px;
  height: 19px;
  margin-top: 1px;
  background-size: cover;
}
.desc{
  display: flex;
}
.dif,.time{
  border: 1px solid #e5e5e5;
  padding-left: 10px;
  width: 50%;
  height: 35px; 
  font-size: 14px;
  line-height: 35px;
  box-sizing: border-box;
  color: #333;
  background: #f8f8f8;
}
.dif{
  border-left: none;
  border-right: none;
}
.time{
  border-right: none;
}
.dif>text,.time>text{
  font-weight: bold;
}
.mate{
  font-size: 14px;
  padding-top: 2px;
  height: 45px;
  line-height: 45px;
  font-weight: bold;
  padding-left: 10px;
  box-sizing: border-box;
  background: #f8f8f8;
  border-bottom: 1px solid #e5e5e5;
  
}
.matebox{
  display: flex;
  flex-wrap: wrap;
}
.mates{
  border-bottom: 1px solid #e5e5e5;
  padding-left: 10px;
  padding-right: 8px;
  width: 100%;
  height: 35px; 
  font-size: 14px;
  line-height: 35px;
  box-sizing: border-box;
  color: #333;
  display: flex;
  justify-content: space-between;
}
.step{
  display: flex;
  width: 700rpx;
  margin: 0 auto;
  padding-left: 5px;
  box-sizing: border-box;
  padding-top: 10px;
  padding-bottom: 10px;
  border-bottom: 1px dotted #e5e5e5;
}
.step:last-child{
  border:none;
}
.stepimg{
  width: 200rpx;
  height: 200rpx;
  background-size: cover;
  overflow: hidden;
}
.stepimg>image{
  width: 200rpx;
  height: 200rpx;
}
.stepcon{
  width: 520rpx;
  font-size: 12px;
  box-sizing: border-box;
  padding-left: 10px;
  padding-right: 5px;
}
.stepcons{
  font-size: 12px;
}
.tipsbox{
  border-radius: 6px;
  box-shadow: 0 1px 3px rgba(100,100,100,.3);
  background: #fff;
  padding:10px 0;
  margin-bottom: 25px;  
  box-sizing: border-box;
}
.tip{
  font-size: 16px;
  padding-left: 5px;
  box-sizing: border-box;  
}
.tips{
  padding-left: 5px;
  box-sizing: border-box;
  padding-top: 5px;
  font-size: 13px;
}